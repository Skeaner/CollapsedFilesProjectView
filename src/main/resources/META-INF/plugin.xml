<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.skeaner.collapsedfilesprojectview</id>
    <name>CollapsedFilesProjectView</name>
    <vendor>skeaner</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                groupId="tools"
                key="projectName"
                id="CollapsedFilesProjectViewConfigurable"
                instance="com.github.skeaner.collapsedfilesprojectview.settings.SettingsConfigurable"/>
        
        <searchScopesProvider
                implementation="com.github.skeaner.collapsedfilesprojectview.provider.MySearchScopesProvider"/>
        <treeStructureProvider
                implementation="com.github.skeaner.collapsedfilesprojectview.provider.MyTreeStructureProvider"/>
    
    
    </extensions>
    
    <actions>
        <action id="ProjectView.CollapsedFilesAction"
                class="com.github.skeaner.collapsedfilesprojectview.action.CollapsedFilesAction"
                text="Collapse Files"
                description="Action that lets you collapse the files located in the root of your project">
            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.FlattenPackages"
                    anchor="before"/>
            <add-to-group group-id="WelcomeScreen.QuickStart" anchor="first"/>
        
        </action>
    </actions>

</idea-plugin>
